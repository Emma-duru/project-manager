
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
<link rel="stylesheet" href="main.css">

<div class="signup-container">

        <div class="card signup-content text-center">
            <div class="card-body">
                <h2><a href="/" class="logo">GIST</a></h2>
                <h3 class="mb-4">Sign up</h3>

                <form>
                    <div class="form-group">
                        <input type="text" name="username" class="form-control" placeholder="Username" autocomplete="off">
                        <div class="username error text-danger"></div>
                    </div>
                    
                    <div class="form-group">
                        <input type="text" name="email" class="form-control" placeholder="Email Address" autocomplete="nope">
                        <div class="email error text-danger"></div>
                    </div>
                    
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="Password">
                        <div class="password error text-danger"></div>
                    </div>
                    
                    <div class="form-group">
                        <input type="password" name="confirmPassword" class="form-control" placeholder="Confirm Password">
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="SIGN UP" class="btn btn-primary">
                    </div>
                    <p>Already have an account? <a href="/login">Login</a></p>
                </form>
            </div>
        </div>
    </div>

    <script>
        const form = document.querySelector("form");
        const usernameError = document.querySelector(".username.error");
        const emailError = document.querySelector(".email.error");
        const passwordError = document.querySelector(".password.error");

        form.addEventListener("submit", async(e) => {
            e.preventDefault();
            
            // Reset error fields
            usernameError.textContent = "";
            emailError.textContent = "";
            passwordError.textContent = "";

            // Get values of the fields
            const username = form.username.value;
            const email = form.email.value;
            const password = form.password.value;
            const confirmPassword = form.confirmPassword.value;

            if (username === "") {
                usernameError.textContent = "Please enter your username";
                form.removeEventListener();
            }
            if (email === "") {
                emailError.textContent = "Please enter your email";
                form.removeEventListener();
            }
            if (password === "") {
                passwordError.textContent = "Please enter your password";
                form.removeEventListener();
            }

            if (password !== confirmPassword) {
                passwordError.textContent = "The two password fields must match";
                form.removeEventListener();
            }

            try {
                const res = await fetch("/signup", {
                    method: "POST",
                    body: JSON.stringify({ username, email, password }),
                    headers: { "Content-Type": "application/json" }
                });
                const data = await res.json();

                if (data.user) {
                    location.assign("/");
                }

                if(data.emailError) {
                    emailError.textContent = data.emailError;
                }

            } catch (err) {
                
            }
            
        })
    </script>

